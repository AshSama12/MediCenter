@model mediCenter.Models.Drug
@{
    ViewData["Title"] = "Add New Drug";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Add New Drug
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-pills me-1"></i>Drug Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Enter drug name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Manufacturer" class="form-label">
                                    <i class="fas fa-industry me-1"></i>Manufacturer <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Manufacturer" class="form-control" placeholder="Enter manufacturer name" />
                                <span asp-validation-for="Manufacturer" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-info-circle me-1"></i>Description (Optional)
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="2" placeholder="Enter drug description"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Category" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Category
                                </label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">Select Category</option>
                                    <option value="Antibiotic">Antibiotic</option>
                                    <option value="Painkiller">Painkiller</option>
                                    <option value="Vitamin">Vitamin</option>
                                    <option value="Antiviral">Antiviral</option>
                                    <option value="Antifungal">Antifungal</option>
                                    <option value="Heart Medication">Heart Medication</option>
                                    <option value="Blood Pressure">Blood Pressure</option>
                                    <option value="Diabetes">Diabetes</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Dosage" class="form-label">
                                    <i class="fas fa-prescription-bottle me-1"></i>Dosage
                                </label>
                                <input asp-for="Dosage" class="form-control" placeholder="e.g., 500mg, 10ml" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="UnitPrice" class="form-label">
                                    <i class="fas fa-money-bill me-1"></i>Unit Price (LKR) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="UnitsPerPack" class="form-label">
                                    <i class="fas fa-boxes me-1"></i>Units per Pack <span class="text-danger">*</span>
                                </label>
                                <input asp-for="UnitsPerPack" class="form-control" type="number" value="1" min="1" />
                                <span asp-validation-for="UnitsPerPack" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="PackType" class="form-label">
                                    <i class="fas fa-box me-1"></i>Pack Type
                                </label>
                                <select asp-for="PackType" class="form-select">
                                    <option value="Unit">Unit</option>
                                    <option value="Pack">Pack</option>
                                    <option value="Bottle">Bottle</option>
                                    <option value="Box">Box</option>
                                    <option value="Strip">Strip</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calculator me-1"></i>Pack Price (LKR)
                                </label>
                                <input type="text" class="form-control bg-light" readonly id="packPrice" value="LKR 0.00" />
                                <small class="text-muted">Unit Price Ã— Units per Pack</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StockQuantity" class="form-label">
                                    <i class="fas fa-boxes me-1"></i>Stock Quantity (Packs)
                                </label>
                                <input asp-for="StockQuantity" class="form-control" type="number" placeholder="0" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ExpiryDate" class="form-label">
                            <i class="fas fa-calendar me-1"></i>Expiry Date <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ExpiryDate" class="form-control" type="date" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SideEffects" class="form-label">
                            <i class="fas fa-exclamation-triangle me-1"></i>Side Effects (Optional)
                        </label>
                        <textarea asp-for="SideEffects" class="form-control" rows="2" placeholder="List possible side effects"></textarea>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="fas fa-save me-2"></i>Save Drug
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function calculatePackPrice() {
            const unitPrice = parseFloat(document.querySelector('#UnitPrice').value) || 0;
            const unitsPerPack = parseInt(document.querySelector('#UnitsPerPack').value) || 1;
            const packPrice = unitPrice * unitsPerPack;
            document.querySelector('#packPrice').value = `LKR ${packPrice.toFixed(2)}`;
        }

        document.querySelector('#UnitPrice').addEventListener('input', calculatePackPrice);
        document.querySelector('#UnitsPerPack').addEventListener('input', calculatePackPrice);
        
        // Initial calculation
        calculatePackPrice();
    </script>
}