@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header text-center">
    <div class="container">
        <h1 class="display-4 mb-0">
            <i class="fas fa-hospital-alt me-3"></i>Welcome to MediCenter
        </h1>
        <p class="lead">Comprehensive Medical Management System</p>
    </div>
</div>

<div class="row g-4">
    <!-- Quick Stats Cards -->
    <div class="col-md-3">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="display-4 text-primary mb-3">
                    <i class="fas fa-user-injured"></i>
                </div>
                <h5 class="card-title">Patients</h5>
                <p class="card-text text-muted">Manage patient records and information</p>
                <a asp-controller="Patients" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-eye me-2"></i>View All
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="display-4 text-success mb-3">
                    <i class="fas fa-pills"></i>
                </div>
                <h5 class="card-title">Drugs</h5>
                <p class="card-text text-muted">Manage drug inventory and information</p>
                <a asp-controller="Drugs" asp-action="Index" class="btn btn-success">
                    <i class="fas fa-eye me-2"></i>View All
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="display-4 text-warning mb-3">
                    <i class="fas fa-prescription"></i>
                </div>
                <h5 class="card-title">Prescriptions</h5>
                <p class="card-text text-muted">Manage prescriptions and treatments</p>
                <a asp-controller="Prescriptions" asp-action="Index" class="btn btn-warning">
                    <i class="fas fa-eye me-2"></i>View All
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="display-4 text-info mb-3">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h5 class="card-title">Reports</h5>
                <p class="card-text text-muted">View analytics and reports</p>
                <button class="btn btn-info" disabled>
                    <i class="fas fa-chart-line me-2"></i>Coming Soon
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-controller="Patients" asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-plus me-2"></i>Add New Patient
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Drugs" asp-action="Create" class="btn btn-outline-success w-100">
                            <i class="fas fa-plus me-2"></i>Add New Drug
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Prescriptions" asp-action="Create" class="btn btn-outline-warning w-100">
                            <i class="fas fa-plus me-2"></i>New Prescription
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar me-2"></i>Today's Overview
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Current Date:</span>
                    <span class="badge bg-primary">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Current Time:</span>
                    <span class="badge bg-secondary" id="current-time">@DateTime.Now.ToString("hh:mm tt")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>System Status:</span>
                    <span class="badge bg-success">
                        <i class="fas fa-check me-1"></i>Online
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Update time every second
        setInterval(function () {
            const now = new Date();
            const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            document.getElementById('current-time').textContent = timeString;
        }, 1000);
    </script>
}
